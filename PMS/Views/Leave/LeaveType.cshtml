    function addApproverUser() {
        console.log(Employes);
        $('#ApproverMatrixUser').empty();
        $('#ddlApprover').empty();
        $.each(Employes, function (index, object) {
            $('#ddlApprover').append('<option data-index="' + index + '" value="' + object.pk_user_id + '">' + object.user_firstname + '</option>');
