@model PMS.Models.Expense.IndexViewsModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<h2></h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="panel panel-default">
        <div class="panel-heading"><h3>Edit Expense</h3></div>
        <div class="panel-body">
            @Html.HiddenFor(model => model.ExpenseModelEntry.ID)
            @Html.HiddenFor(model => model.ExpenseModelEntry.ID)
            <div class="editor-label">
                @Html.LabelFor(model => model.ExpenseModelEntry.ExpenseDate)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ExpenseModelEntry.ExpenseDate, new {id = "date"})
                @Html.ValidationMessageFor(model => model.ExpenseModelEntry.ExpenseDate)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.ExpenseModelEntry.Amount)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ExpenseModelEntry.Amount)
                @Html.ValidationMessageFor(model => model.ExpenseModelEntry.Amount)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.ExpenseModelEntry.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ExpenseModelEntry.Description)
                @Html.ValidationMessageFor(model => model.ExpenseModelEntry.Description)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.ExpenseModelEntry.Tag)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.ExpenseModelEntry.Tag, Model.TagList)
                @Html.ValidationMessageFor(model => model.ExpenseModelEntry.Tag)
            </div>
            <br/>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-offset-0 col-md-12">
                        <input type="submit" class="btn btn-primary btn-round waves-effect waves-light" value="Create" />
                        @Html.ActionLink("Back to List", "Index", "Expense", null, new { @class = "btn btn-primary" })

                    </div>
                </div>
            </div>
        </div>
    </div>

}

<script>
    $(document).ready(function () {
    $("#date").datetimepicker({
         dateFormat: 'dd-mm-yy'
    });
 });
</script>

